@model IEnumerable<MyNewApp.Models.Item>

@{
    ViewData["Title"] = "Get All Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-success mb-0">All Items</h2>
    <a asp-action="AddItems" class="btn btn-success btn-sm">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-success">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                        <th>@Html.DisplayNameFor(model => model.SerialNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.Category)</th>
                        <th>Clients</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.SerialNumber?.Name</td>
                            <td>@item.Category?.Name</td>
                            <td>
                                @foreach(var clients in item.ItemClients)
                                {
                                    <span class="badge bg-secondary me-1">@clients.Client.Name</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="EditItem" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm me-1" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="GetSIngleItem" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-1" title="Details">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                                <a asp-action="RemoveItem" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Delete"
                                   onclick="return confirm('Are you sure you want to delete this item?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
