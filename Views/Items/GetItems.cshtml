@model IEnumerable<MyNewApp.Models.Item>

@{
    ViewData["Title"] = "Get All Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetItems</h1>

<p>
    <a asp-action="AddItems">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SerialNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                Clients
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.SerialNumber?.Name
                </td>
                <td>
                    @item.Category?.Name
                </td>
                <td>
                    @foreach(var clients in item.ItemClients)
                    {
                        @clients.Client.Name
                    }
                </td>
                <td>
                    <a asp-action="EditItem" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="GetSIngleItem" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="RemoveItem" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
