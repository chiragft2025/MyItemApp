@model MyNewApp.Models.Client

@{
    ViewData["Title"] = "Assign Items to " + ViewBag.ClientName;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var allItems = ViewBag.AllItems as List<MyNewApp.Models.Item>;
    var selectedIds = ViewBag.SelectedItemIds as List<int>;
}

<h1>Assign Items to Client: <strong>@ViewBag.ClientName</strong></h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditItems" method="post">
            <input type="hidden" name="id" value="@Model.Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                @foreach (var item in allItems)
                {
                    <div class="form-check">
                        <input type="checkbox"
                               class="form-check-input"
                               name="selectedItemIds"
                               value="@item.Id"
                               @(selectedIds.Contains(item.Id) ? "checked" : "") />
                        <label class="form-check-label">
                            @item.Name (@item.Price ₹)
                            @if (item.Category != null)
                            {
                                <span> - @item.Category.Name</span>
                            }
                        </label>
                    </div>
                }
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
