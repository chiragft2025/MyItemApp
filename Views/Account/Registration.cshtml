@model MyNewApp.Models.RegistrationViewModel

@{
    ViewData["Title"] = "Registration";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg p-4" style="min-width: 350px; max-width: 450px; width: 100%;">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-success mb-1">Create Account</h2>
            <p class="text-muted mb-0">Register to get started with MyNewApp</p>
        </div>
        <form asp-action="Registration" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            @if (ViewBag.Message != null)
            {
                <div class="mb-3 text-success fw-semibold">@ViewBag.Message</div>
            }
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label fw-semibold"></label>
                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label fw-semibold"></label>
                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="UserName" class="form-label fw-semibold"></label>
                <input asp-for="UserName" class="form-control" placeholder="Username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-success btn-lg fw-semibold">Register</button>
            </div>
        </form>
        <div class="text-center mt-3">
            <span>Already have an account?</span>
            <a asp-action="Login" class="btn btn-link text-success fw-semibold">Go to Login</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}